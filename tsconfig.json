{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
    }
  }
}
